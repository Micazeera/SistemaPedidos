{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto", "singleQuote": true, "parser": "flow" }
    ],
    "linebreak-style": ["error", "windows"],
    "no-console": ["error", { "allow": ["warn", "error", "log"] }]
  }
}
